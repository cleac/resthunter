<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="130dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardPreventCornerOverlap="false"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2.5dp"
    android:layout_weight="0.03">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/restaurant_image"
                android:layout_margin="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Restaurant Name"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:id="@+id/restaurant_name"
                android:layout_alignTop="@+id/restaurant_image"
                android:layout_toRightOf="@+id/restaurant_image"
                android:layout_toEndOf="@+id/restaurant_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Kitchen"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:id="@+id/restaurant_kitchen"
                android:layout_below="@+id/restaurant_name"
                android:layout_toRightOf="@+id/restaurant_image"
                android:layout_toEndOf="@+id/restaurant_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Class"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:id="@+id/restaurant_class"
                android:layout_below="@+id/restaurant_name"
                android:layout_toRightOf="@+id/restaurant_kitchen"
                android:layout_toEndOf="@+id/restaurant_kitchen"
                android:layout_marginLeft="41dp"
                android:layout_marginStart="41dp" />

        </RelativeLayout>

</android.support.v7.widget.CardView>